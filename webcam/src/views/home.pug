doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title UnderDog
  body 
    header
      h1 UnderDog
      h2 Welcome to UnderDog
    main 
      div#welcome 
        form
          input(placeholder="room name", required, type="text")
          button Enter room
      div#call
        div#myStream
          video#myFace(autoplay,playsinline, width="300", height="300")
          button#mute Mute
          button#camera Turn camera off
          select#cameras
          video#peerFace(autoplay,playsinline, width="300", height="300")
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")